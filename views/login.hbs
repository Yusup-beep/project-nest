<div class='auth-screen'>
  <div class='auth-container'>
    <div class='auth-header'>
      <a class='only-logo' href='/'>
        <span class='logo'>
          <img src='/static/img/logo.svg' alt='Logo' />
        </span>
      </a>

      <div class='auth-link'>
        <p class='small-text'>
          Don't have an account?
        </p>
        <a href='/sign-up' class='button'>
          Sign up
        </a>
      </div>
    </div>
    {{> forms/login }}

    <div class="flex justify-between items-center">
      <p class='small-text'>&copy; 2025 Cloudy</p>
      <button onclick="toggleTheme()" class="button">
        toggle theme
      </button>
    </div>
  </div>

  <div
    class='auth-container gap-6 bg-blue-600 rounded-xl text-white p-14'
  >
    <span class='text-6xl'>
      Welcome back!
    </span>
    <span class='text-2xl font-light'>
      We are glad to see you again. Please login to your account.
    </span>
  </div>
</div>